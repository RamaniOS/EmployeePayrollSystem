<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cestar.employeepayrollsystem">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:screenOrientation="portrait"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".UI.Activities.VehicleDetailActivity"></activity>
        <activity android:name=".UI.Activities.EmployeeDetailActivity" />
        <activity android:name=".UI.Activities.AddVehicleActivity" />
        <activity android:name=".UI.AddVehicle" />
        <activity
            android:name=".UI.Activities.LoginActivity"
            android:label="Sign In" />
        <activity
            android:name=".UI.Activities.NavDrawerActivity"
            android:label="@string/title_activity_nav_drawer"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".UI.Activities.DetailSplashActivity"
            android:theme="@style/DetailSplashTheme" />
        <activity
            android:name=".UI.Activities.SplashActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>